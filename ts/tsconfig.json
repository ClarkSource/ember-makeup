{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "target": "es2016",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmitOnError": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../js",
    "typeRoots": ["../node_modules/@types", "types"],
    "esModuleInterop": true
  }
}
